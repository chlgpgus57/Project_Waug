<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="orderMapper">

<insert id="insertBookerInfo" parameterType="BookerInfoVO">
	<selectKey order="BEFORE" resultType="Integer" keyProperty="b_num">
		select book_seq.nextval from dual
	</selectKey>
		insert into booker_info values(#{b_num},#{b_name},#{b_email},#{sns},#{b_visit},#{b_gender},#{b_num},#{firstName},#{lastName},#{passport},#{email})
</insert>
<insert id="insertBookerInfo2" parameterType="BookerInfoVO">
	insert into booker_info values(book_seq.nextval,#{b_name},#{b_email},#{sns},#{b_visit},#{b_gender},#{b_num},#{firstName},#{lastName},#{passport},#{email})
</insert>

<select id="selectOptionTime" resultType="GoodsOptionVO">
	select * from goods_option	
</select>
</mapper>